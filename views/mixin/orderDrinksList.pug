mixin orderDrinksList( order, mode)
	- let drinks = order.drinks
	.field(id="order-items")
		- for(let i=0; i < drinks.length; i+= 1)
			div.panel-block(style="border-radius: 0px; postion: relative")
				div.column(style="text-align: left")
					img(src=`${drinks[i].imgUrl}`, alt=drinks[i].drink_name, style="width:75px")
				div.column(style="text-align: left")
					=drinks[i].drink_name+' '+drinks[i].quantity+' ea'+' '+drinks[i].price+' à¸¿'
				if mode=='EDIT'
					a.delete(href=`/order_items/${order.id}?_method=delete&drinkCode=${drinks[i].id}`)

